colorscheme pablo
set guifont=Monospace\ 16

source $VIMRUNTIME/delmenu.vim
source $VIMRUNTIME/menu.vim
set guioptions-=T
set guioptions-=m
set guioptions-=L
set guioptions-=r
set guioptions-=b
set guioptions-=e
set nolist

set mouse=a
set encoding=utf-8
syntax on
set number
filetype on
filetype plugin on
syntax enable
syntax on
set t_Co=256
set whichwrap+=<,>,h,l
set virtualedit=block,onemore


set autoindent
set cindent
set cinoptions=g0,:0,N-s,(0
set smartindent
filetype indent on
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set smarttab
set backspace=2
set wildmenu
set completeopt-=preview

set noswapfile
